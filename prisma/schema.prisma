generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:admin25@localhost:3306/copa2026" // sua string de conex√£o .env
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  albums   Album[]
}

model Album {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  isMain      Boolean   @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  albumItems  AlbumSticker[]
}

model Sticker {
  id       Int      @id @default(autoincrement())
  number   Int
  name     String
  country  String
  player   String
  albums   AlbumSticker[]
}

model AlbumSticker {
  id         Int      @id @default(autoincrement())
  albumId    Int
  stickerId  Int
  owned      Boolean  @default(false)

  album      Album    @relation(fields: [albumId], references: [id])
  sticker    Sticker  @relation(fields: [stickerId], references: [id])

  @@unique([albumId, stickerId])
}
